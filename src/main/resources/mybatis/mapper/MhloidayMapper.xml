<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd"> <mapper namespace="com.handcraft.mapper.LocalPicMapper">

    <resultMap id="BaseResultMap" type="com.handcraft.pojo.MHloiday" >
        <constructor >
            <idArg column="UUID" jdbcType="VARCHAR" javaType="java.lang.String" />
            <arg column="qq_code" jdbcType="VARCHAR" javaType="java.lang.String" />
            <arg column="holiday" jdbcType="VARCHAR" javaType="java.lang.String" />
            <arg column="create_time" jdbcType="TIMESTAMP" javaType="java.util.Date" />
            <arg column="holiday_time" jdbcType="TIMESTAMP" javaType="java.util.Date" />
            <arg column="h_type" jdbcType="VARCHAR" javaType="java.lang.String"  />
        </constructor>
    </resultMap>
    <sql id="Base_Column_List" >
    UUID,qq_code,holiday,create_time,holiday_time,h_type
     </sql>

    <insert id="batchadd"  parameterType="com.handcraft.pojo.MHloiday" >
        insert into
        mholiday   (UUID,qq_code,holiday,create_time,holiday_time,h_type)
        values
        (#{UUID}, #{qqCode},#{holiday},now(),#{holidayTime},#{hType})

    </insert>

    <select id="queryone" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
     from mholiday
     where pic_type="1"
    order by create_time asc
    limit 1
    </select>

    <select id="queryonese" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
     from mholiday
     where pic_type="2"
    order by create_time asc
    limit 1
    </select>

    <delete id="delete" parameterType="String">

    delete from mholiday where UUID=#{UUID}

    </delete>

</mapper>